@model List<ResultProductDto>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<section id="main-content">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-10" style="margin-top:20px;">
                <section class="panel">
                    <header class="panel-heading">
                        Ürün Listesi
                    </header>

                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> #</th>
                                <th><i class="icon_calendar"></i> Ürün Görseli</th>
                                <th><i class="icon_calendar"></i> Ürün Adı</th>
                                <th><i class="icon_calendar"></i> Kategorisi</th>
                                <th><i class="icon_calendar"></i> Fiyatı</th>
                                <th><i class="icon_calendar"></i> Stok</th>

                                <th><i class="icon_cogs"></i> İşlemler</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.ImageUrl" alt="" style="width: auto; height: 75px; margin-top: 20px;" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Stock</td>
                                    <td>
                                        <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a>
                                        <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
                <a href="/Product/CreateProduct/" class="btn btn-primary">Ürün Ekle</a>

            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
