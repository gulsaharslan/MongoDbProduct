@model GetByIdOrderDto

@{
    ViewData["Title"] = "UpdateOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-10" style="margin-top:20px">
                <section class="panel">
                    <header class="panel-heading">
                        Sipariş Güncelle
                    </header>
                    <div class="panel-body">
                        <form class="form-horizontal " method="post" asp-controller="Order" asp-action="UpdateOrder">
                            <input type="hidden" asp-for="OrderId">

                            <div class="form-group">
                                <label class="col-sm-1 control-label">Müşteri Adı</label>
                                <div class="col-sm-5">
                                    @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.Customer, "Müşteri Seçiniz...", new { @class = "form-control", @style = "margin-left:10px" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-1 control-label">Ürün Adı</label>
                                <div class="col-sm-5">
                                    @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.Product, "Ürün Seçiniz...", new { @class = "form-control", @style = "margin-left:10px" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-1 control-label">Sipariş Adedi</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" asp-for="Piece">
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="col-sm-1 control-label">Sipariş Tarihi</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" asp-for="OrderDate">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </form>
                    </div>
                </section>
    </section>
</section>

