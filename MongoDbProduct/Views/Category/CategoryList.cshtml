@model List<MongoDbProduct.Dtos.CategoryDtos.ResultCategoryDto>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "_AdminLayout";
    int count = 0;
}
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="row">
                    <div class="col-lg-10" style="margin-top:20px;">
                        <section class="panel">
                            <header class="panel-heading">
                                Kategori Listesi
                            </header>

                            <table class="table table-striped table-advance table-hover">
                                <tbody>
                                    <tr>
                                        <th><i class="icon_profile"></i> #</th>
                                        <th><i class="icon_calendar"></i> Kategori Adı</th>
                                        <th><i class="icon_cogs"></i> İşlemler</th>
                                    </tr>
                                    @foreach(var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CategoryName</td>
                                            <td>
                                               <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                                                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </section>
                        <a href="/Category/CreateCategory/" class="btn btn-primary">Kategori Ekle</a>

                    </div>
                </div>
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->


